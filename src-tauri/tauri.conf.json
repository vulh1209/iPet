{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "iPet",
  "version": "0.2.1",
  "identifier": "com.vule.ipet",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "iPet",
        "width": 200,
        "height": 180,
        "x": 10,
        "y": 10,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "shadow": false
      },
      {
        "label": "settings",
        "title": "iPet Settings",
        "url": "settings.html",
        "width": 450,
        "height": 550,
        "resizable": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "infoPlist": "./Info.plist",
      "entitlements": "./Entitlements.plist"
    }
  }
}
